class Solution {
  public:
    Node* reverseList(struct Node* head) {
        Node* prev = NULL;
        Node* curr = head;
        Node* next = NULL;

        while (curr != NULL) {
            next = curr->next;   // store next node
            curr->next = prev;   // reverse current node's pointer
            prev = curr;         // move prev forward
            curr = next;         // move curr forward
        }

        return prev; // prev is new head
    }
};
