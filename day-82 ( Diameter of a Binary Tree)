class Solution {
  public:
        int ans=0;
        
        int dfs (Node* root){
            if (root == NULL) return -1;
            
            int left = dfs(root -> left);
            int right = dfs(root -> right);
            
            ans = max(ans,left + right +2);
            
            return 1 + max(left,right);
            
            
            
        }
  
  
  
    int diameter(Node* root) {
        // Your code here
        dfs(root);
        return ans;
        
        
    }
};











